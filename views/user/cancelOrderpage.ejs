      <% if (order.length > 0) { %>
        <table  class="fl-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Order Date</th>
                    <th>Total Quantity</th>
                    <th>Payment Method</th>
                    <th>Product ID</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Pincode</th>
                </tr>
            </thead>
            <tbody>
                <% order.forEach(function(order){ %>
                    <% order.products.forEach(function(product,index){ %>
                        <tr>
                            <td><%= generateUniqueID() %></td>
                            <td><%= order.username %></td>
                            <td><%= new Date(order.orderDate).toLocaleDateString('en-GB', { day: '2-digit', month: '2-digit', year: 'numeric' }) %></td>
                            <td><%= order.totalQuantity %></td>
                            <td><%= order.paymentMethod %></td>
                            <td><%= generateUniqueProductID(generateUniqueID(), index) %></td>
                            <td><%= product.product %></td>
                            <td><%= product.quantity %></td>
                            <td>₹<%= product.price.toFixed(2) %></td>
                            <td>₹<%= order.totalPrice.toFixed(2) %></td>
                            <td><%= product.status %></td>
                            <td><%= order.address.address %></td>
                            <td><%= order.address.city %></td>
                            <td><%= order.address.state %></td>
                            <td><%= order.address.pincode %></td>
                        </tr>
                    <% }); %>
                <% }); %>
            </tbody>
        </table>
