  <h1>Category Management</h1>
    
    <div class="categories">
        <h2>Categories</h2>
        <ul id="categoryList">
            <!-- Category list will appear here -->
        </ul>
        <form id="addCategoryForm">
            <input type="text" id="categoryInput" placeholder="Add new category">
            <button type="submit">Add Category</button>
        </form>
        <form id="deleteCategoryForm">
            <select id="deleteCategorySelect">
                <!-- Dropdown options for categories will appear here -->
            </select>
            <button type="submit">Delete Category</button>
        </form>
    </div>

    <!-- <script src="scripts.js"></script> -->
    <script>const categoryList = document.getElementById('categoryList');
      const addCategoryForm = document.getElementById('addCategoryForm');
      const deleteCategoryForm = document.getElementById('deleteCategoryForm');
      const categoryInput = document.getElementById('categoryInput');
      const deleteCategorySelect = document.getElementById('deleteCategorySelect');
      
      // Example of existing categories (this could be retrieved from a database)
      let categories = ['Category 1', 'Category 2', 'Category 3'];
      
      // Function to display categories
      function displayCategories() {
          categoryList.innerHTML = '';
          deleteCategorySelect.innerHTML = '';
          
          categories.forEach(category => {
              const li = document.createElement('li');
              li.textContent = category;
              categoryList.appendChild(li);
      
              const option = document.createElement('option');
              option.value = category;
              option.textContent = category;
              deleteCategorySelect.appendChild(option);
          });
      }
      
      // Add category
      addCategoryForm.addEventListener('submit', function(event) {
          event.preventDefault();
          const newCategory = categoryInput.value.trim();
          if (newCategory !== '') {
              categories.push(newCategory);
              displayCategories();
              categoryInput.value = '';
          }
      });
      
      // Delete category
      deleteCategoryForm.addEventListener('submit', function(event) {
          event.preventDefault();
          const selectedCategory = deleteCategorySelect.value;
          const index = categories.indexOf(selectedCategory);
          if (index !== -1) {
              categories.splice(index, 1);
              displayCategories();
          }
      });
      
      // Display initial categories
      displayCategories();
        </script>
