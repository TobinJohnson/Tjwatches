    <div class="container col-lg-9">
        <h2 style="margin-left: 40%;">Update Category</h2>
        <% if (typeof message !== 'undefined') { %>
            <div id="customPopup" class="custom-popup">
                <div class="popup-content">
                    <p><%= message %></p>
                    <button id="cancelButton">Cancel</button>
                </div>
            </div>
            <script>
                document.getElementById('customPopup').style.display = 'block'; // Show the popup
    
                document.getElementById('cancelButton').addEventListener('click', function () {
                    document.getElementById('customPopup').style.display = 'none'; // Hide the popup when cancel is clicked
                });
            </script>
        <% } %>
    
        <div class="container border mt-5 p-3">
            <form class="mt-3" id="updateCategoryForm" action="/admin/updatecategory/<%= category._id %>" method="post">
                <div class="mb-3">
                    <label for="UrunID" class="form-label">Category Name</label>
                    <input value="<%= category.categoryname %>" name="categoryname" type="text" class="form-control"
                        id="UrunID" aria-describedby="" required>
                        <label class="form-label" for="UrunID">Is Listed:</label>
                        <select class="form-select" name="isListed" id="UrunID" required>
                            <option value="true" <%= category.isListed === true ? 'selected' : '' %>>True</option>
                            <option value="false" <%= category.isListed === false ? 'selected' : '' %>>False</option>
                        </select>
                        <label for="UrunID" class="form-label">Offer Percentage</label>
                    <input value="<%= category.OfferPercentage %>" name="OfferPercentage" type="text" class="form-control"
                        id="UrunID" aria-describedby="" required>
                      
                </div>
    
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success text-white btn-outline-success form-control w-75 m-3 btn-submit">
                        Update Category
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    
    

