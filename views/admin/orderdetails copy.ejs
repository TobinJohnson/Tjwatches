    <script>
        function confirmRemoveOrder(orderId) {
          var confirmation = window.confirm("Are you sure you want to Remove this order?");
      
          if (confirmation) {
            // If the user clicks "OK" in the confirmation dialog, proceed with the removal
            window.location.href = '/removeOrder/' + orderId;
          } else {
            // If the user clicks "Cancel" or closes the dialog, do nothing
          }
        } 

        function confirmCancelOrder(orderId) {
          var confirmation = window.confirm("Are you sure you want to Cancel this order?");
      
          if (confirmation) {
            // If the user clicks "OK" in the confirmation dialog, proceed with the removal
            window.location.href = '/cancelOrder/' + orderId;
          } else {
            // If the user clicks "Cancel" or closes the dialog, do nothing
          }
        } 

        function confirmReturnOrder(orderId) {
          var confirmation = window.confirm("Are you sure you want to Return this order?");
      
          if (confirmation) {
            // If the user clicks "OK" in the confirmation dialog, proceed with the removal
            window.location.href = '/returnOrder/' + orderId;
          } else {
            // If the user clicks "Cancel" or closes the dialog, do nothing
          }
        } 
      </script>
      
