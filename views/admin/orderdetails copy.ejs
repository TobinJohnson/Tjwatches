    <%- include('sidepanel') %>
    <!-- End Header Area -->

    
      <!-- Table Starting -->
      <div class="table-wrapper" style="margin-top: 7rem;">
        <% if (orders.length > 0) { %>
        <a href="/cancelOrdersPage/<%= userId %>" class="btn btn-success">View Cancelled Orders</a>
        
     <table class="fl-table" style:"font-size:1.6rem">
            <thead>
                <tr>
                    <th>Order</th>
                    <th>Order Date</th>
                    <!-- <th>Product ID</th> -->
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Total Order Quantity</th>

                    <th>Price</th>
                    <th>Address</th>
                    <th>FinalPrice</th>
                    <th>Status</th>
                    <th>Actions</th>
                    <!-- <th>Order Details</th> -->
                </tr>
            </thead>
            <tbody >
                <% for(let i=0; i<orders.length; i++) { %>
                    <% for(let j=0; j<orders[i].products.length; j++) { %>
                        <tr style="font-weight: 700;">
                            <td style="font-size: 16px;"><%= orders[i]._id.toString().slice(-4) %></td>
                            <!-- <td><%= orders[i].orderDate %></td> -->
                            <td><%= new Date(orders[i].orderDate).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>

                            <!-- <td><%= orderIds[i][j]%></td> -->
                            <!-- <td><%= orders[i].products[j].productid %></td> -->
                            <td "><%= orders[i].products[j].product %></td>
                            <td><%= orders[i].products[j].quantity %></td>
                            <td><%= orders[i].totalQuantity%></td>
                            <td>₹<%= orders[i].products[j].price %></td>
                            <td><%= orders[i].address.address %>, <%= orders[i].address.city %>, <%= orders[i].address.state %>, <%= orders[i].address.pincode %></td>
                            <td>₹<%=orders[i].totalPrice.toFixed(2)%></td>
                            <td><%= orders[i].products[j].status %></td>
                            <td>
                                <% if (orders[i].products[j].status !== 'Returned') { %>
                                    <% if (orders[i].products[j].status === 'Delivered') { %>
                                        <button class="return-button btn btn-success" onclick="confirmReturnOrder('<%= orders[i]._id %>')">Return Order</button>
                                        <button class="remove-button btn btn-danger" onclick="confirmRemoveOrder('<%= orders[i]._id %>')">Remove Order</button>
                                    <% } else if (orders[i].products[j].status === 'Cancelled') { %>
                                        <button class="remove-button btn btn-danger" disabled>Order Cancelled</button>
                                    <% } else if (orders[i].products[j].status === 'Return Requested') { %>
                                        <button class="cancel-requested-button btn btn-warning" disabled>Return Requested</button>
                                    <% } else { %>
                                        <button class="remove-button btn btn-danger"  onclick="confirmCancelOrder('<%= orders[i]._id %>')">Cancel Order</button>
                                    <% } %>
                                <% } %>
                            </td>
                       
                    <% } %>
                  
                        <!-- <td style="text-align: right;"><a href="/orderView/<%= orders[i]._id %>" class="view-more-button btn btn-info">View More</a></td> -->
                      </tr>
                <% } %>
            </tbody>
        </table>
