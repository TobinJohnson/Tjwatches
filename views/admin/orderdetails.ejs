            </thead>
            <tbody >
                <% for(let i=0; i<orders.length; i++) { %>
                        <tr style="font-weight: 700;">
                            <td style="font-size: 16px;"><a href="/user/orderDetails/<%= orders[i]._id %>"><%= orders[i]._id.toString().slice(-4) %></a></td>
                            <td><%= new Date(orders[i].orderDate).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>

                          
                            <td><%= orders[i].totalQuantity%></td>
                            <td><%= orders[i].address.address %>, <%= orders[i].address.city %>, <%= orders[i].address.state %>, <%= orders[i].address.pincode %></td>
                            <td>â‚¹<%=orders[i].totalPrice.toFixed(2)%></td>
                            <td><%=orders[i].paymentMethod%></td>
                            <td> <%= orders[i].status %>
                              <% if (orders[i].status === 'Confirmed') { %>
                                <select id="orderStatusSelect_<%= orders[i]._id %>" onchange="updateOrderStatus('<%= orders[i]._id %>', this.value)">
                                    <option value="Confirmed" <%= orders[i].status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                                    <option value="Delivered" <%= orders[i].status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                     </select>
                                     <% } %>
                                <% if (orders[i].status === 'Return Pending') { %>
                                  <select id="orderStatusSelect_<%= orders[i]._id %>" onchange="updateOrderStatus('<%= orders[i]._id %>', this.value)">
                                      <option value="Return Pending" <%= orders[i].status === 'Return Pending' ? 'selected' : '' %>>Return Pending</option>
                                      <option value="Return Confirmed" <%= orders[i].status === 'Return Confirmed' ? 'selected' : '' %>>Return Confirmed</option>
                                  </select>
                                  <% } %>

                                <!-- <% if (orders[i].status === 'Return Confirmed') { %>
                                  <button onclick="applyRefund('<%= orders[i]._id %>')">Apply Refund</button>
                              <% } else { %>
                                  <button style="display: none;" onclick="applyRefund('<%= orders[i]._id %>')" disabled>Apply Refund</button>
                              <% } %> -->
                              <% } %>

                          </td>
                                                    
                    
                  
                      </tr>
            </tbody>
        </table>
        <% } %>

