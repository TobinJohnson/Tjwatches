    <script>
  function updateOrderStatus(orderId, newStatus) {
    const selectElement = document.querySelector(`#orderStatusSelect_${orderId}`);
    selectElement.disabled = true;

    fetch(`/admin/updateOrderStatus/${orderId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ status: newStatus }),
    })
    .then(response => {
        if (!response.ok) {
            throw new Error(`Failed to update order status. Server returned ${response.status} ${response.statusText}`);
        }
        // return response.json();
        window.location.reload();
    })
    .then(responseData => {
        console.log('Order status updated successfully');
